<!-- views/movies-show.handlebars -->

<div class="row mt-4">
  <div class="col-lg-6">
    <img class="img-fluid w-100 rounded mb-3" src="{{movie.imgUrl}}" alt="Card image cap">
    <small class="text-muted">Created on: {{movie.createdAtFormatted}}</small>
    <h3>{{movie.title}}</h3>
    <div class="lead">{{movie.desc}}</div>
    <div class="text-right">
      <a href="/movies/{{movie.id}}/edit">Edit</a>
    </div>
  </div>
  <div class="col-lg-4 offset-lg-1">
    <div class="d-flex justify-content-between">
        <b>Ratings ({{movie.Ratings.length}})</b>
        <a href="/movies/{{movie.id}}/ratings/new" class="btn btn-primary btn-sm">Rate</a>
    </div>

    <div class="list-group mt-4">
      {{#each movie.Ratings}}
        <div class="list-group-item clearfix">
          <div class="float-left">
            {{this.name}}
          </div>
          <div class="float-right">
            <form class="form-inline" action="/movies/{{../movie.id}}/ratings/{{this.id}}?_method=DELETE">
              <button type="submit" class="btn btn-link btn-sm">Remove</button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>
</div>
</div>
